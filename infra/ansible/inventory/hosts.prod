[controller]
localhost ansible_connection=local

[sensors]
# -----------------------------------------------------------------------------
# SENSOR-NORTH: RPi 4 + u-blox F9P (USB)
# ROLE: RTK Base Station
# -----------------------------------------------------------------------------
# HARDWARE PROFILE:
# - Interface: /dev/ttyACM0 (Confirmed via Balena script)
# - Baud Rate: 230400 (Required for F9P high bandwidth)
# -----------------------------------------------------------------------------
sensor-north ansible_host=192.168.1.30 gnss_device=/dev/ttyACM0 gnss_baudrate=230400 socat_hub_port=2000 ntrip_caster=192.168.1.30 ntrip_host=opencaster.nls.fi ntrip_port=2101 ntrip_mountpoint=VRS-FKP ntrip_user=rwiren ntrip_password=Riku3404

