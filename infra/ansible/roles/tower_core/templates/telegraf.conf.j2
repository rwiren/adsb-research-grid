# üèóÔ∏è TOWER CORE: Telegraf Configuration
# Role: Central Metrics Collector & Self-Health Monitor

[global_tags]
  role = "tower-core"
  grid_zone = "HQ"

[agent]
  interval = "10s"
  round_interval = true
  metric_batch_size = 1000
  metric_buffer_limit = 10000
  collection_jitter = "0s"
  flush_interval = "10s"
  flush_jitter = "0s"
  hostname = "tower-core"

# üì§ OUTPUTS: Send data to local InfluxDB
[[outputs.influxdb_v2]]
  urls = ["http://influxdb:8086"]
  token = "{{ tower_influx_token }}"
  organization = "research_grid"
  bucket = "telegraf"

# üì• INPUTS: Hardware Health (NVMe & CPU)
[[inputs.cpu]]
  percpu = true
  totalcpu = true
  collect_cpu_time = false
  report_active = false

[[inputs.disk]]
  # [FIX] Look at the mapped host path
  mount_points = ["/hostfs"]
  ignore_fs = ["tmpfs", "devtmpfs", "overlay", "aufs", "squashfs"]

[[inputs.diskio]]
  # Monitor NVMe wear and throughput
  devices = ["nvme0n1"]

[[inputs.mem]]
[[inputs.system]]
[[inputs.temp]]

# üì° INPUTS: The Nervous System (MQTT)
# Monitors your Sensor Node Heartbeats
[[inputs.mqtt_consumer]]
  servers = ["tcp://mosquitto:1883"]
  topics = [
    "sensors/+/health"       # Watch Sensor North/West/East heartbeats
  ]
  data_format = "json"
  tag_keys = ["host", "sensor_id"]

# ------------------------------------------------------------------
# [Input] OwnTracks (Samsung Z7 Fold - Agent RW)
# [Transport] ZeroTier Tunnel (Anonymous / No Auth)
# ------------------------------------------------------------------
[[inputs.mqtt_consumer]]
  servers = ["tcp://mosquitto:1883"]
  topics = ["owntracks/#"]
  name_override = "owntracks"

  # Data Parsing
  data_format = "json"
  
  # [UPDATED] Added 't' (trigger) to tags for filtering events
  tag_keys = ["tid", "_type", "_id", "conn", "t"]
  
  # Treat these as text strings
  json_string_fields = ["source", "created_at"]
  
  # Use phone timestamp
  json_time_key = "tst"
  json_time_format = "unix"

# ------------------------------------------------------------------
# [Input] Autel Robotics (Controller & Drone)
# [Status] Controller: Active | Drone: Pending
# ------------------------------------------------------------------
[[inputs.mqtt_consumer]]
  servers = ["tcp://mosquitto:1883"]
  topics = [
    "autel/controller/#",
    "autel/drone/#"
  ]
  name_override = "autel_telemetry"
  data_format = "json"
  tag_keys = ["device_type", "serial_number", "flight_mode"]

# üê≥ INPUTS: Docker Health (Container Watchdog)
[[inputs.docker]]
  endpoint = "unix:///var/run/docker.sock"
  gather_services = false
  source_tag = false
